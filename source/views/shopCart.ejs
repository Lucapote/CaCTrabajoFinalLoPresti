<!DOCTYPE html>
<html lang="en">
<%-include("partials/head")%>
<body>
    <%-include("partials/navbar")%>
    <main id="mainShopCart">
        <h1>Carrito de Compras</h1>

        <section class="shopCart shopCartBorder">
            <p>DETALLE DEL PRODUCTO</p>
            <p>CANTIDAD</p>
            <p>TOTAL</p>
        </section>

        <section class="shopCart shopCartBorder">
            <div class="shopCart">
                <img class="shopItemCart" src=<%=producto.img_front%> alt=<%=producto.product_name%>>
                <div>
                    <p class="tituluoItemCart"><%=producto.product_name%></p>
                    <p class="catItemCart"><%=producto.licence_name%></p>
                    <p class="precioItemCart">Precio unitario: $<span id="precioProducto"><%=producto.product_price%></span></p>
                </div>
            </div>

            <div class="shopCart">
                <label for="cantidadItem" aria-label="cantidadItem">
                    <input type="number" name="cantidadItem" value="1" id="cantidadItem" class="inputShopCartCantidad">
                </label>
                <div>
                    <button class="btnItemCant botonCantidad">+</button>
                    <button class="btnItemCant botonCantidad">-</button>
                </div>
            </div>
            <p class="subtotalCuenta"></p>
            <button class="eliminarItem">X</button>
        </section>

        <section id="resumenCart">
            <h2>RESUMEN</h2>
            <div class="shopCartResumenContainer shopCartBorder">
                <div class="resumenCartFlex">
                    <p>Cantidad de elementos</p>
                    <p id="cantidadElementos"></p>
                </div>
                <div class="resumenCartFlex">
                    <p>Subtotal</p>
                    <p class="subtotalCuenta"></p>
                </div>
                <div class="resumenCartFlex">
                    <p>Env√≠o</p>
                    <p>$ 0,00</p>
                </div>
                <hr class="hrResumenTotalCart">
                <div class="resumenCartFlex">
                    <p>Total</p>
                    <p>$5.339,37</p>
                </div>
            </div>
            <button class="shopCartResumenContainer btnPagar">IR A PAGAR</button>
        </section>

    </main>
    <%-include("partials/footer")%>

    <script src="/js/shopItem.js"></script>
</body>
</html>